<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_summary_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_name"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_summary_is_colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_colored"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/tv_summary_filename" />

    <TextView
        android:id="@+id/tv_summary_paper_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paper_type_default"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/tv_summary_is_colored"/>

    <View
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:background="@color/blackColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_summary_filename"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_summary_is_binded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/binded"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_summary_filename"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.8"/>

    <TextView
        android:id="@+id/tv_summary_front_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/front_bind_default"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_summary_is_binded"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.8"/>

    <TextView
        android:id="@+id/tv_summary_back_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_bind_default"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_summary_front_bind"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.8"/>

</android.support.constraint.ConstraintLayout>